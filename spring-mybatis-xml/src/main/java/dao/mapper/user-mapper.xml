<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.UserDao">
	<insert id="insertUser">
		INSERT users VALUES(NULL, #{name}, #{city})
	</insert>
	<delete id="deleteUserById">
		DELETE FROM users WHERE id = #{id}
	</delete>
	<update id="updateUserCity">
		UPDATE users SET city = #{city} WHERE id = #{id}
	</update>
	<select id="getUserById" resultType="entity.User">
		SELECT id, name, city FROM users WHERE id = #{id} 
	</select>
	<select id="getAllUsers" resultType="entity.User">
		SELECT id, name, city FROM users
	</select>
</mapper>